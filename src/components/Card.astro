---
import '../styles/color.css';
import '../styles/fonts.css';

const { eventTitle } = Astro.props;
const { eventImage } = Astro.props;
const { eventDate } = Astro.props;
---

<div class='card' style=`background-image: url(${ eventImage })`>
	<h2>{eventTitle}</h2>
</div>
<h3>{eventDate}</h3>

<style>
	.card {
		display: flex;
		flex-direction: column;
		height: 250px;
		width: 100%;
		background-size: cover;
		position: relative;
	}

	.card h2 {
		position: absolute;
		color: var(--white);
		z-index: 10;
		padding-top: 170px;
		padding-left: 25px;
		text-transform: uppercase;
		place-self: start end;
        letter-spacing: 0.625rem;
	}

	.card::before {
		position: absolute;
		content: '';
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		opacity: 1;
		z-index: 1;
		background: linear-gradient(
			180deg,
			rgba(0, 0, 0, 0) 50%,
			rgba(0, 0, 0, 0.673) 100%
		);
	}

	h3 {
        letter-spacing: 0.25rem;
		margin-left: auto;
        margin-bottom: 50px;
        font-family: "HelveticaRoman";
        color: var(--lightgrey);
	}

    @media (min-width: 800px) {
        .card {
            height: 800px;
        }

        .card h2 {
            padding-top: 650px;
            font-size: 3rem;
        }

        h3 {
            font-size: 2rem;
            margin-right: 50px;
        }
    }
</style>
