---
import blomst from "../images/index-02.jpg";
import { Image } from "astro:assets";
---

<section>
  <div class="text_container">
    <h3>
      “We believe our future needs to work together with nature not against it.”
      <br />
      <br />
      -Louise Nash
      <br />
      Founder Of Circularity
    </h3>
  </div>
  <div class="img_container">
    <Image src={blomst} alt="material" />
  </div>
</section>

<style>
  section {
    position: relative;
    text-align: center;
    color: white;
    z-index: 100;
  }
  .text_container {
    position: absolute;
    z-index: 101;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
  }
  section h3 {
    color: var(--white);
    font-style: italic;
    font-family: "HelveticaRoman";
  }

  .img_container {
    width: 100%;
    height: 40vh;
    overflow: hidden;
  }
  img {
    position: relative;
    top: -10px;
  }
</style>
