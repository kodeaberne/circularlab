---
const { text } = Astro.props;
---

<button>{text}</button>
<style>
	button {
		background-color: var(--orange);
		padding: 1.25rem;
		border-radius: 32px;
		border: none;
		color: white;
		width: 12rem;
		margin-top: 2rem;
		margin-bottom: 2rem;
		font-family: 'HelveticaBold';
		font-size: 1rem;
		box-shadow: 0px 4px 4px 0px rgba(0, 0, 0, 0.25);
		backdrop-filter: blur(2px);
	}
	button:hover {
		transform: scale(1.05);
	}
</style>
