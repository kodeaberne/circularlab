---

import { supabase } from "../lib/supabase";
import BaseLayout from "../layouts/BaseLayout.astro";
import "../styles/color.css"

import { Image } from "astro:assets";

export const prerender = false;

const getId = Astro.url.searchParams.get('id');

const { data, error } = await supabase
	.from('events')
	.select('id,title,eventtype,descheader,description,eventdate,eventstart,eventend,imglink')
    .eq('id', getId)
	.order('eventdate', { ascending: true });

if (error) {
	console.log(error);
	throw error;
}

const eventlist = data.map((t) => t);


const options = {
	year: 'numeric',
	month: 'numeric',
	day: 'numeric',
};
---

<BaseLayout>
    <section>
        {
            eventlist.map((event) => (
                <img src={event.imglink} alt="">
                <div class='container'>
                <h1>{event.eventtype}</h1>
                <h2>{event.title}</h2>
                <h3 id='date'>{new Date(event.eventdate).toLocaleDateString(
                    'da-DA',
                    options
                )}</h3>
                <div class='calendarButton'>
                    <Image src="/plus.svg" width='1.25rem' height='1.25rem' alt='plus icon'></Image>
                    <h3>TILFÃ˜J TIL KALENDER</h3>
                </div>
                <h3>&quot{event.descheader}&quot</h3>
                <p>{event.description}</p>
                <div class='info'>
                    <h3>Praktisk:</h3>
                        <p><b>Tid:</b> {event.eventstart} - {event.eventend}</p>
                </div>
                </div>   
            ))
        }
    </section>
</BaseLayout>

<style>
    section {
        padding-top: 25px;
        display: flex;
        flex-direction: column;
        justify-content: center;
        width: 95vw;
        margin-left: 2.5vw;
        margin-right: 2.5vw;
    }

    .calendarButton {
        display: flex;
        height: 3.5rem;
        background-color: var(--black);
        color: var(--white);
        margin-left: -2.5vw;
        margin-right: -2.5vw;
        margin-top: 2rem;
        margin-bottom: 2rem;
        align-items: center;
    }

    .calendarButton img {
        width: 1.25rem;
        height: auto;
        margin-right: 2.5rem;
        padding-left: 2vw;
    }

    .calendarButton h3 {
        font-family: "HelveticaRoman";
        letter-spacing: 0.25rem;
    }
    section h1 {
        text-transform: uppercase;
        font-family: "HelveticaRoman";
        letter-spacing: 0.25rem;
        font-size: 2rem;
    }

    section h2 {
        letter-spacing: 0.25rem;
        font-family: "HelveticaRoman";
        color: var(--grey); 
        margin-top: -10px;
    }

    section #date {
        color: var(--orange);
        font-family: "HelveticaRoman";
        margin-top: 0px;
    }

    section h3 {
        font-family: "HelveticaRoman";
        line-height: 130%;
    }

    section p {
        text-wrap: pretty;
        hyphens: auto;
        max-width: 80ch;
        line-height: 150%;
    }

    .info {
        margin-top: 50px;
        border-top: 1px solid var(--lightgrey);
        margin-bottom: 50px;
    }

    .info h3 {
        letter-spacing: 0.25rem;
    }

    @media (min-width: 800px) {
        section {
            flex-direction: row;
            width: 100%;
            justify-content: center;
            align-items: center;
            gap: 3rem;
            margin: auto;
            padding-bottom: 150px;
        }

        section img {
           width: 50%;
        }

        section .container {
            width: 50%;
            max-width: 500px;
        }

        .calendarButton {
            margin-left: 0;
            margin-right: 0;
            cursor: pointer;
        }

        .calendarButton:hover {
            background-color: var(--lightgrey);
            color: var(--black);
            transition: 0.5s;
        }
    }
</style>